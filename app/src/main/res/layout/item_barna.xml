<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/cardMargin"
            android:layout_marginTop="@dimen/cardMargin"
            android:layout_marginStart="@dimen/cardMargin"
            android:layout_marginRight="@dimen/cardMargin"
            android:layout_marginEnd="@dimen/cardMargin"
            android:layout_marginBottom="@dimen/cardMargin"
            app:cardCornerRadius="@dimen/cardStyling"
            android:background="@android:color/holo_blue_light"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentLeft="false"
            android:id="@+id/cardItem">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/tekstiMargin"
                android:background="@android:color/holo_blue_light">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvDataF"
                        android:textSize="@dimen/teksti"
                        android:layout_marginBottom="@dimen/tekstiMargin"
                        android:textColor="@color/colorAccent"
                        android:gravity="center"
                        android:layout_weight="1"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvDataM"
                        android:textSize="@dimen/teksti"
                        android:layout_marginBottom="@dimen/tekstiMargin"
                        android:textColor="@color/colorAccent"
                        android:gravity="center"
                        android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvId"
                    android:textSize="@dimen/teksti"
                    android:layout_marginBottom="@dimen/tekstiMargin"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"
                    android:visibility="gone"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:id="@+id/tvEmri"
                    android:textSize="@dimen/teksti"
                    android:layout_marginBottom="@dimen/tekstiMargin"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPershkrimi"
                    android:textSize="@dimen/teksti"
                    android:layout_marginBottom="@dimen/tekstiMargin"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDoktori"
                    android:textSize="@dimen/teksti"
                    android:layout_marginBottom="@dimen/tekstiMargin"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:paddingTop="@dimen/cardMargin">
                <Button
                        android:text="@string/btnNdrysho"
                        android:background="@drawable/buttons_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnEdit"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/cardMargin"
                        android:layout_marginRight="@dimen/cardMargin"/>
                <Button
                        android:text="@string/btnFshij"
                        android:background="@drawable/buttons_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnDelete"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/cardMargin"
                        android:layout_marginRight="@dimen/cardMargin"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.SuggestionsQuestions">

    <TextView
            android:text="@string/txtVQandS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtVQandS"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:textSize="36sp"
    />
    <TextView
            android:text="@string/txt_qands_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtComment"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="@dimen/margin_image"
            android:layout_marginStart="@dimen/margin_image"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="30sp"
            android:layout_marginTop="128dp"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>
    <EditText
            android:layout_width="393dp"
            android:layout_height="189dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/txtQandS"
            android:layout_marginStart="@dimen/margin_image"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="@dimen/margin_image"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/margin_image"
            android:layout_marginRight="@dimen/margin_image"
            app:layout_constraintHorizontal_bias="0.166"
            android:layout_marginTop="@dimen/margin_image"
            app:layout_constraintTop_toBottomOf="@+id/txtComment"
            android:textSize="@dimen/teksti"/>
    <Button
            android:text="@string/btn_qands"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnQandS"
            app:layout_constraintTop_toBottomOf="@+id/txtQandS"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="@dimen/teksti"
            android:layout_marginTop="16dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"/>
</android.support.constraint.ConstraintLayout>